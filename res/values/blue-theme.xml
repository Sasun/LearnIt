<resources>

    <style name="Theme.BlueTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_blue_theme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.BlueTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.BlueTheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.BlueTheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.BlueTheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_blueredtheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_blueredtheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.BlueTheme</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:dialogTheme">@style/Dialog.BlueTheme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.BlueTheme</item>
    </style>

    <style name="Theme.BlueTheme.DialogWhenLarge" parent="android:Theme.Holo.Light.DialogWhenLarge">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_blue_theme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.BlueTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.BlueTheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.BlueTheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.BlueTheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_blueredtheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_blueredtheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.BlueTheme</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:dialogTheme">@style/Dialog.BlueTheme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.BlueTheme</item>
    </style>


    <style name="Dialog.BlueTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:editTextStyle">@style/MyEditTextOnWhite</item>
        <item name="android:imageButtonStyle">@style/MyImageButtonWhite</item>
    </style>

    <style name="Theme.BlueTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/my_normal_text</item>
    </style>

    <style name="ActionBar.Solid.BlueTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_blue_theme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_blueredtheme</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_blue_theme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.BlueTheme</item>
    </style>

    <style name="PopupMenu.BlueTheme" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_blueredtheme</item>
    </style>

    <style name="DropDownListView.BlueTheme" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_blue_theme</item>
    </style>

    <style name="DropDownNav.BlueTheme" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_blue_theme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_blueredtheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_blue_theme</item>
    </style>

    <style name="SpinnerItem.BlueTheme" parent="android:Widget.Holo.Light.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressBar.BlueTheme" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_blue_theme</item>
    </style>

    <style name="ActionButton.CloseMode.BlueTheme" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_blue_theme</item>
    </style>


</resources>