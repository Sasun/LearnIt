<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative_layout_dict"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <RelativeLayout
            android:id="@+id/linearLayDict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
                android:id="@+id/edv_search_word"
                style="@style/MyEditText"
                android:hint="@string/search_word_hint"
                android:drawableLeft="@drawable/ic_action_search"/>
        <ImageButton
                android:id="@+id/btn_search_clear"
                android:layout_alignRight="@id/edv_search_word"
                style="@style/MyImageButton"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/list_of_words"
        android:layout_below="@id/linearLayDict"
        style="@style/MyListView">
    </ListView>

</RelativeLayout>