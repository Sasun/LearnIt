<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.learnit.LearnIt"
          android:versionCode="90"
          android:versionName="@string/version">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:allowBackup="true"
            android:hardwareAccelerated="true"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/Theme.BlueTheme"
            android:label="@string/app_name">

        <receiver android:name=".services.AutoStart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:enabled="true" android:name=".services.NotificationService"/>

        <activity
                android:name=".activities.MainActivity"
                android:label="@string/app_name"
                android:launchMode="standard"
                android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.HomeworkActivity"
                android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name=".activities.PrefActivity"
                android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.WelcomeActivity"
                  android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                  android:screenOrientation="sensor"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.InfoActivity"
                  android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                  android:screenOrientation="sensor"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.EditWord"
                  android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                  android:screenOrientation="sensor"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.LoadStarDictActivity"
                  android:theme="@style/Theme.BlueTheme.DialogWhenLarge"
                  android:screenOrientation="sensor"
                  android:label="@string/app_name">
        </activity>
    </application>

</manifest>